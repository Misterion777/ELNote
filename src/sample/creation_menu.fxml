<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="sample.CreationMenuController"
          alignment="center" hgap="10" vgap="10">
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

    <Label text="Enter key:" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
    <Label text="Select time signature:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
    <Label text="Enter BPM:" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
    <ComboBox fx:id="noteInput" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <ComboBox fx:id="keyInput" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <ComboBox fx:id="timeInput" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    <TextField fx:id="bpmInput" GridPane.columnIndex="3" GridPane.rowIndex="1" />
    <Button text="Create new composition" onAction="#create" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="3"/>
    <Button text="Load composition" onAction="#load" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="3"/>
    <CheckBox fx:id="pluginCheckBox" text="Decrypt" GridPane.rowIndex="3" GridPane.columnIndex="2" />


</GridPane>
